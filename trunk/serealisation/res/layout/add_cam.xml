<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ScrollView01" android:layout_height="fill_parent"
	android:layout_width="fill_parent">
	<TableLayout android:orientation="horizontal"
		android:stretchColumns="1" android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:gravity="fill"
		android:scrollbars="vertical">
		<TextView android:hint="Ajouter une camÃ©ra" android:textSize="12pt"
			android:gravity="center" />
		<Button android:text="Ajouter Depuis un QrCode" android:id="@+id/bqr"
			android:layout_height="wrap_content" android:gravity="center"
			android:layout_width="fill_parent" android:layout_weight="1" />
		<TableRow>
			<TextView android:text="Identifiant :" android:id="@+id/tid" />
			<EditText android:hint="Entrez un id" android:id="@+id/eid"
				android:gravity="center" />
		</TableRow>
		<TableRow>
			<TextView android:text="Login :" android:id="@+id/tlogin" />
			<EditText android:hint="Entrez un login" android:id="@+id/elogin"
				android:gravity="center" />
		</TableRow>
		<TableRow>
			<TextView android:text="Password :" android:id="@+id/tpass" />
			<EditText android:hint="Entrez un pass" android:id="@+id/epass"
				android:gravity="center" android:password="true" />
		</TableRow>
		<TableRow>
			<TextView android:text="Ip :" android:id="@+id/tip" />
			<EditText android:hint="Entrez une ip" android:id="@+id/eip"
				android:gravity="center" />
		</TableRow>

		<TableRow>
			<TextView android:text="Port :" android:id="@+id/tport" />
			<EditText android:hint="Entrez un port" android:id="@+id/eport"
				android:gravity="center" android:numeric="decimal" />
		</TableRow>
		<TableRow>
			<TextView android:text="Channel :" android:id="@+id/tchan" />
			<EditText android:hint="Entrez un Canal" android:id="@+id/echan"
				android:gravity="center" android:numeric="decimal" />
		</TableRow>
		<!--<TableRow> <TextView android:text="Protocol :" android:id="@+id/tprot" 
			/> <Spinner android:id="@+id/spinner" android:layout_width="fill_parent" 
			android:layout_height="wrap_content" android:prompt="@string/protocol_prompt" 
			/> </TableRow> -->
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android">
			<Button android:id="@+id/add" android:text="Ajouter"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_weight="1" />
			<Button android:id="@+id/ret" android:text="Annuler"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_weight="1" />
		</LinearLayout>
	</TableLayout>
</ScrollView>
	